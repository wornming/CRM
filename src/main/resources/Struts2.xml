<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- 设置默认的locale和字符编码集 -->
	<constant name="struts.locale" value="zh_CN"/>
	<!-- 指定web应用的默认编码集，相当于调用HttpServletRequest的setCharacterEncoding -->
	<constant name="struts.i18n.encoding" value="utf-8"/>
	<!-- 浏览器是否缓存静态内容，默认为true，开发阶段最好关闭 -->
	<constant name="struts.serve.static.browserCache" value="false"/>
	
	<!-- 当struts的配置文件修改后，系统是重新加载该文件，默认值是false。开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="true"/>
	<!-- 开发者模式启用 -->
	<constant name="struts.devMode" value="true" />
	<!--表示Action的创建由spring执行  -->
	<constant  name="struts.objectFactory"  value="spring"/>
	<!-- 该属性指定整合spring时，是否对bean进行缓存，值为true or false -->
	<constant name="struts.objectFactory.spring.useClassCache" value="true"/>
	<!-- 指定文件上传的临时目录，默认使用javax.servlet.context.tempdir -->
	<constant name="struts.multipart.saveDir" value="/tempuploadfiles"/>
	<!-- 指定上传的文件最大的字节数 -->
	<constant name="struts.multipart.maxSize" value="2097152"/>
	
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	
	
	

	
</struts>
